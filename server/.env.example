# 伺服器設定
PORT=3001

# API Keys（可留空，改由前端輸入並加密保存於伺服器）
OPENAI_API_KEY=
GOOGLE_API_KEY=

# 金鑰加密用密碼（請修改）
SECRET_PASSPHRASE=change-this-in-production

# Whisper 模型
WHISPER_MODEL=whisper-1
WHISPER_MODE=api # api | local

# 本機 faster-whisper 設定（當 WHISPER_MODE=local 時使用）
LOCAL_WHISPER_MODEL=large-v3-turbo
LOCAL_DEVICE=cpu # cpu | cuda | auto
LOCAL_COMPUTE=int8 # int8 | float16 | auto

# OpenAI 分析模型（可改 gpt-4o-mini / o4-mini 等）
OPENAI_MODEL=gpt-4o-mini

# Google Gemini 模型（例如 gemini-2.5-flash）
GOOGLE_MODEL=gemini-2.5-flash
